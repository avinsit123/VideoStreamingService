  title Video Streaming Service
nav.navbar.navbar-expand-lg.navbar-light.navbar-laravel
  .container
    a.navbar-brand(href='#') Video Streaming Service
    button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      ul.navbar-nav.ml-auto
        li.nav-item
          a.nav-link(href='/login') Login
        li.nav-item
          a.nav-link(href='/register') Register
main.my-form
  .cotainer
    .row.justify-content-center
      .col-md-8
        .card
          .card-header Login
          .card-body
            form(name='my-form', action='/homepage', method='post')
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='full_name') Name
                .col-md-6
                  input#full_name.form-control(type='text', name='full-name')
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='email_address') User ID
                .col-md-6
                  input#email_address.form-control(type='text', name='userID')
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='user_name') Password
                .col-md-6
                  input#user_name.form-control(type='password', name='pwd')
              .col-md-6.offset-md-4
                button.btn.btn-primary(type='submit')
                  | Login
